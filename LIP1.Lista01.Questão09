import java.util.Scanner;
public class Questao09 {
public static void main(String[] args){
Scanner input = new Scanner(System.in);
float salario,parcela;
System.out.printf("Digite o Valor do Salario recebido:\n");
    salario = input.nextFloat();
System.out.printf("Digite o valor da parcela do empresimo:\n");
    parcela = input.nextFloat();
input.close();
if ( parcela > (0.2*salario) )
    System.out.printf("NAO CONCEDIDO");
else
    System.out.printf("CONCEDIDO");
}
}
