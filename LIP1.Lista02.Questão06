package LIP1.Lista02;

/**
 *
 * @author gean_
 */
import java.util.Scanner;
public class Questao06 {

public static int FAT(int x){
if(x == 1)
    return x;
else
    return x * FAT(x-1);
} 

public static void main (String[] args){
Scanner input = new Scanner(System.in);
int x;

System.out.printf("Digite o valor de termos do fatorial:\n");
    x = input.nextInt();
    
System.out.printf("O VALOR EH:%d \n", FAT(x));
}
}
