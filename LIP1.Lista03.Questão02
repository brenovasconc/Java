import java.awt.*;
import javax.swing.*;

public class Questao02 {
    
public static void main(String[] args){
JFrame FRAME = new JFrame("Quatidade de Digitos");
JLabel LABEL = new JLabel("Insira o texto");
JTextArea TEXTO = new JTextArea("...");
JButton OK = new JButton("OK");
JFrame resultado = new JFrame("Quantidade de Caracteres");

Container CONT = FRAME.getContentPane();
    CONT.add(LABEL);
    CONT.add(TEXTO);
    CONT.add(OK);

LABEL.setBounds(20, 20, 400, 40);
TEXTO.setBounds(20, 80, 400, 40);
OK.setBounds(20, 150, 200, 40);

FRAME.setLayout(null);
FRAME.setVisible(true);
FRAME.setSize(800, 800);
FRAME.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE); 
}
}
