import java.util.Scanner;
public class Questao06 {
public static void main(String [] args){
Scanner input = new Scanner(System.in);
int x;
System.out.printf("Digite um numero inteiro:\n");
    x = input.nextInt();
input.close();
if(x > 0 ){
 int quadrado;
 double raiz;
 quadrado = x * x;
 raiz = Math.sqrt(x);
 System.out.printf("O Quadrado do numero eh: %d\n", quadrado);
 System.out.printf("A raiz quadrada do numero eh: %.2f", raiz);
}
else
    System.out.printf("Nao Ã© um numero positivo");
}
}
